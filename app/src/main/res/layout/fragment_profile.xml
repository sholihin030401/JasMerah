<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/icperson"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/ic_person_white"
                android:layout_margin="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edit_black_24dp"
                android:background="@android:color/transparent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="20dp"/>
            <TextView
                android:id="@+id/userProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/username"
                android:textSize="20sp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="#000000"
                android:layout_marginTop="20sp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/icperson"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/phoneProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_62_85766689697"
                android:textSize="18sp"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/poppins_medium"
                app:layout_constraintTop_toBottomOf="@id/userProfile"
                app:layout_constraintStart_toEndOf="@id/icperson"/>
            <TextView
                android:id="@+id/mailProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/username_gmail_com"
                android:textSize="18sp"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/poppins_medium"
                app:layout_constraintTop_toBottomOf="@id/phoneProfile"
                app:layout_constraintStart_toEndOf="@id/icperson"/>

            <TextView
                android:id="@+id/aktivitassaya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/aktivitas_saya"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/poppins_medium"
                app:layout_constraintTop_toBottomOf="@id/mailProfile"
                app:layout_constraintStart_toStartOf="parent"/>

            <ImageView
                android:id="@+id/belajarProfile"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_learn_white"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/aktivitassaya"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/belajar"
                android:textSize="16sp"
                android:textColor="#000000"
                android:fontFamily="@font/poppins_medium"
                app:layout_constraintTop_toBottomOf="@id/belajarProfile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                android:id="@+id/donasiProfile"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_donate_white"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/aktivitassaya"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/belajarProfile"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/donasi"
                android:textSize="16sp"
                android:textColor="#000000"
                android:fontFamily="@font/poppins_medium"
                app:layout_constraintTop_toBottomOf="@id/donasiProfile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/belajarProfile"/>

            <ImageView
                android:id="@+id/kerjaProfile"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_work_white"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/aktivitassaya"
                app:layout_constraintStart_toEndOf="@id/belajarProfile"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kerja"
                android:textSize="16sp"
                android:textColor="#000000"
                android:fontFamily="@font/poppins_medium"
                app:layout_constraintTop_toBottomOf="@id/belajarProfile"
                app:layout_constraintStart_toEndOf="@id/belajarProfile"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</FrameLayout>